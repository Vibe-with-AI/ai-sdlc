version = "0.1.0"

# ordered lifecycle steps
steps = [
  "01-idea",
  "02-prd",
  "03-prd-plus",
  "04-architecture",
  "05-system-patterns",
  "06-tasks",
  "07-tests",
  "08-release-plan",
  "09-retro"
]

slug_rule    = "kebab-case"
template_dir = "templates"
